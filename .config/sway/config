# bindsym Cancel exec ~/.local/bin/ppctl balanced
# bindsym XF86Favorites exec ~/.local/bin/ppctl performance

exec_always autotiling
exec_always wlsunset -S 06:00 -s 22:00

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position bottom

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    # status_command while date +'%Y-%m-%d %X'; do sleep 1; done
    status_command i3status

    colors {
        statusline $text
        # background #323232
        background $base
        inactive_workspace #00000000 #00000000 $base
        focused_workspace #00000000 $base #cdd6f4aa
    }
}

